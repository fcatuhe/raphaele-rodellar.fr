<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title><%= title %></title>
<meta name="title" property="og:title" content="<%= title %>">
<meta name="description" property="og:description" content="<%= description %>">
<meta name="image" property="og:image" content="<%= image_url('og_image.jpg') %>">
<meta name="author" content="Raphaële Rodellar">
<meta property="og:type" content="website">
<meta property="og:site_name" content="Raphaële Rodellar">
<meta property="og:url" content="<%= current_page_canonical_url %>">

<link rel="canonical" href="<%= current_page_canonical_url %>">

<%= favicon_tag('favicon.ico') %>

<meta name="robots" content="<%= config[:robots_content] %>">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6/css/all.min.css">
<%= stylesheet_link_tag 'main' %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/js/bootstrap.min.js"></script>

<% if content_for?(:assets) %>
  <%= yield_content :assets %>
<% end %>
