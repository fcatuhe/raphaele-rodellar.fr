<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title><%= title %></title>
<meta name="title" property="og:title" content="<%= title %>">
<meta name="description" property="og:description" content="<%= description %>">
<meta name="image" property="og:image" content="<%= image_url('og_image.jpg') %>">
<meta name="author" content="Raphaële Rodellar">
<meta property="og:type" content="website">
<meta property="og:site_name" content="Raphaële Rodellar">
<meta property="og:url" content="<%= current_page_canonical_url %>">

<link rel="canonical" href="<%= current_page_canonical_url %>">

<%= favicon_tag('favicon.ico') %>

<meta name="robots" content="<%= config[:robots_content] %>">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<%= stylesheet_link_tag 'main' %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

<script src="https://kit.fontawesome.com/e91391ba95.js" crossorigin="anonymous"></script>

<% if content_for?(:assets) %>
  <%= yield_content :assets %>
<% end %>
